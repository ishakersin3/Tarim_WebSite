@using EntityLayer
@model Team
@{
    ViewData["Title"] = "CreateTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Takım Arkadaşı Kaydı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <input type="text" asp-for="PersonName" class="form-control" id="exampleInputName1" placeholder="Ad Soyad">
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <input type="text" asp-for="Title" class="form-control" id="exampleInputEmail3" placeholder="Görev">
                    <span asp-validation-for="Title" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Görsel</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" id="exampleTextarea1" placeholder="Görsel" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Facebook</label>
                    <input type="text" class="form-control" asp-for="FacebookUrl" id="exampleTextarea1" placeholder="Facebook Linkini Giriniz"/>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Instagram</label>
                    <input type="text" class="form-control" asp-for="InstagramUrl" id="exampleTextarea1" placeholder="Instagram Linkini Giriniz"/>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Twitter</label>
                    <input type="text" class="form-control" asp-for="TwitterUrl" id="exampleTextarea1" placeholder="Twitter Linkini Giriniz"/>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Web Sitesi</label>
                    <input type="text" class="form-control" asp-for="WebSiteUrl" id="exampleTextarea1" placeholder="Web Sitesi Linkini Giriniz"/>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

