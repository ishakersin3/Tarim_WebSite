@using EntityLayer
@model Contact
@{
    ViewData["Title"] = "CreateTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="ContactId" />
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="text" asp-for="Mail" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Tarih</label>
                    <input type="text" class="form-control" asp-for="Date" id="exampleTextarea1" placeholder="Tarih" />
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Mesaj Detayı</label>
                    <textarea class="form-control" asp-for="Meesage" rows="10"></textarea>
                </div>             
            </form>
        </div>
    </div>
</div>



