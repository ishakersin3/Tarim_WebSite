@using EntityLayer
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <a href="/Team/CreateTeam" class="btn btn-outline-success">Mesajlar</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Mail</th>
                        <th>Tarih</th>
                        <th>Mesajı Gör</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Mail</td>
                            <td>@item.Date</td>
                            <td>@item.Message</td>
                            <td><a href="/Contact/MessageDetails/@item.ContactId" class="btn btn-outline-primary">Mesaj Detayı</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
